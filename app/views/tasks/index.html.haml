#create-task-function
  .create-task-logo Let's add your task!
  .create-task
    = form_for [@task] do |f|
      .row
        .col.s10.m11
          = f.text_field :name, class: "form-control", placeholder: "Add your task!!"
        .col.s2.m1
          .btn-floating.waves-effect.waves-light.red
            %button{:type => "submit",:class=>"btn-floating waves-effect waves-light red"}
              %i.material-icons add


#task-list-function
  .unfinished-tasks-box
    .tasks-logo 実施中のタスク
  #unfinished-tasks
    - @tasks.each do |task|
      %ul.collection
        = form_for task do |f|
          %li#row_task_1.collection-item
            %input#task_1{:type => "checkbox"}/
            %label{:for => "task_1"} 
              = f.submit task.name,class:"aiueo serch-#{task.id}",name:"test",disabled:false,"data-task-id": task.id
            %label.delete{:for => "task_1"} 
              = f.submit "delete", class:"test",name:"test","data-task-id": task.id
  #finished-tasks
    .finished-tasks-box
      .tasks-logo 完了したタスク
    - @endtasks.each do |etask|
      %ul.collection
        = form_for etask do |f|
          %li#row_task_1.collection-item
            %input#task_1{:type => "checkbox"}/
            %label{:for => "task_1"} 
              = f.submit etask.name,class:"aiueo serch-#{etask.id} kakikukeko",name:"test",disabled:false,"data-task-id": etask.id
            %label.delete{:for => "task_1"} 
              = f.submit "delete", class:"test",name:"test","data-task-id": etask.id
  %a.waves-effect.waves-light.btn.orange.darken-4.modal-trigger{:href => "#modal1"} 投稿する
