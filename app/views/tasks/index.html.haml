.create-task-function
  .create-task
    = form_for [@task] do |f|
      .row
        .col.s10.m11
          = f.text_field :name, class: "form-control", placeholder: "Add your task!!"
        .col.s2.m1
          .btn-floating.waves-effect.waves-light.red
            %button{:type => "submit",:class=>"btn-floating waves-effect waves-light red"}
              %i.material-icons add


.task-list-function
  #unfinished-tasks
    - @tasks.each do |task|
      %ul.collection
        = form_for task do |f|
          %li#row_task_1.collection-item
            %input#task_1{:type => "checkbox"}/
            %label{:for => "task_1"} 
              = f.submit task.name,class:"aiueo",name:"test",disabled:false,"data-task-id": task.id
            %label.delete{:for => "task_1"} 
              = f.submit "delete", class:"test",name:"test","data-task-id": task.id
  .btn finished tasks!!!!!!!!!!!!
  #finished-tasks.display_none
    - @endtasks.each do |etask|
      %ul.collection
        = form_for etask do |f|
          %li#row_task_1.collection-item
