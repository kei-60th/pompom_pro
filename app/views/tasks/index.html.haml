.wrapper
  .create-task
    / 新規作成部分
    = form_for [@task] do |f|
      .row
        .col.s10.m11
          /%input.form-control{:placeholder => "Add your task!!"}/
          = f.text_field :name, class: "form-control", placeholder: "Add your task!!"
        .col.s2.m1
          .btn-floating.waves-effect.waves-light.red
            %button{:type => "submit",:class=>"btn-floating waves-effect waves-light red"}
              %i.material-icons add
  / リスト表示部分
.task-list
  - @tasks.each do |task|
    %ul.collection
      = form_for task do |f|
        %li#row_task_1.collection-item
          %input#task_1{:type => "checkbox"}/
          %label{:for => "task_1"} 
            = f.submit task.name,class:"aiueo",name:"test",disabled:false
          %label.delete{:for => "task_1"} 
            = f.submit "delete", class:"test",name:"test"
            /data-action="/images/1" data-method="DELETE"
  / 完了済みタスク表示ボタン
  .btn finished tasks!!!!!!!!!!!!
  / 完了済みタスク一覧
  #finished-tasks.display_none
    - @endtasks.each do |etask|
      %ul.collection
        = form_for etask do |f|
          %li#row_task_1.collection-item
            %input#task_1{:type => "checkbox"}/
            %label{:for => "task_1"} 
              = f.submit etask.name,class:"aiueo",name:"test",disabled:false
            %label.delete{:for => "task_1"} 
              = f.submit "delete", class:"test",name:"test"
      / Modal Trigger
  %a.waves-effect.waves-light.btn.modal-trigger{:href => "#modal1"} 投稿する
  / Modal Structure
  #modal1.modal.modal-fixed-footer
    .form
      = form_for @post do |f|
        .modal-content
          %h4 投稿画面
          .endtaskList
            終了したタスク:
            - @endtasks.each do |etask|
              =etask.name
          #totalTime
          = f.text_area :body, class: "input-box__text", placeholder: "type a message"
          
        .modal-footer
          = f.submit "投稿する", class: "btn"


